{
  "name": "functions",
  "scripts": {
    "lint": "",
    "build": "tsc && npm run copy-static-files",
    "prebuild": "npm run clean",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "NODE_ENV=testing GOOGLE_APPLICATION_CREDENTIALS=./service-account.json jest --detectOpenHandles",
    "copy-static-files": "copyfiles -u 1 src/templates/*.* lib/",
    "clean": "rimraf lib/"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sendinblue/client": "^3.3.1",
    "axios": "^1.3.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.1",
    "flutterwave-node-v3": "^1.0.12",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/flutterwave-node": "^1.0.1",
    "@types/jest": "^29.4.0",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.0.0",
    "jest": "^29.4.2",
    "jest-mock-extended": "^3.0.1",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.5.4"
  },
  "private": true
}
